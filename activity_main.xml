<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <!-- URL 입력줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/urlBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="주소 또는 검색어"
            android:padding="8dp" />

        <Button
            android:id="@+id/goBtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="검색" />
    </LinearLayout>

    <!-- 탭 컨테이너 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- 버튼들 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/backBtn" android:text="◀" android:layout_width="0dp" android:layout_weight="1"/>
        <Button android:id="@+id/forwardBtn" android:text="▶" android:layout_width="0dp" android:layout_weight="1"/>
        <Button android:id="@+id/reloadBtn" android:text="⟳" android:layout_width="0dp" android:layout_weight="1"/>
        <Button android:id="@+id/homeBtn" android:text="홈" android:layout_width="0dp" android:layout_weight="1"/>
    </LinearLayout>

    <!-- 토글 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton android:id="@+id/desktopBtn" android:textOn="Desktop" android:textOff="Desktop"/>
        <ToggleButton android:id="@+id/darkModeBtn" android:textOn="Dark" android:textOff="Dark"/>
        <ToggleButton android:id="@+id/fullscreenBtn" android:textOn="전체" android:textOff="전체"/>
    </LinearLayout>

    <!-- 새 탭 + 닫기 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/newTabBtn"
            android:text="새 탭"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/closeTabBtn"
            android:text="탭 닫기"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <!-- GeckoView -->
    <org.mozilla.geckoview.GeckoView
        android:id="@+id/geckoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
